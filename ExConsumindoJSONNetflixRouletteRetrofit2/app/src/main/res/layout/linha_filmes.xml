<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_imagem"
        android:layout_width="100dp"
        android:layout_height="150dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_imagem"
        android:text="TextView" />

    <TextView
        android:id="@+id/tv_diretor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tv_titulo"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/iv_imagem" />

    <TextView
        android:id="@+id/tv_categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_below="@+id/tv_diretor"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/iv_imagem" />

    <TextView
        android:id="@+id/tv_sinopse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_alignStart="@+id/tv_categoria"
        android:layout_alignBottom="@+id/iv_imagem"
        android:layout_below="@+id/tv_categoria" />
</RelativeLayout>